<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#CC000000"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageButton android:id="@id/kexo_prev"
            style="@style/ExoMediaButton.Previous"/>

        <ImageButton android:id="@id/kexo_rew"
            style="@style/ExoMediaButton.Rewind"/>

        <ImageButton android:id="@id/kexo_play"
            style="@style/ExoMediaButton.Play"/>

        <ImageButton android:id="@id/kexo_pause"
            style="@style/ExoMediaButton.Pause"/>

        <ImageButton android:id="@id/kexo_ffwd"
            style="@style/ExoMediaButton.FastForward"/>

        <ImageButton android:id="@id/kexo_next"
            style="@style/ExoMediaButton.Next"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/kexo_position"
            android:contentDescription="time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#FFBEBEBE"/>

        <com.kaltura.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/kexo_progress"
            android:contentDescription="mediacontroller_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView android:id="@+id/kexo_duration"
            android:contentDescription="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="#FFBEBEBE"/>

    </LinearLayout>

</LinearLayout>